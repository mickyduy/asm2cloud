<%- include('layout/header')%>

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h3 class="page-title">Edit Product (<%= product.name%>)</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-6 offset-lg-3">
            <form class="product-form" action="/update/<%= product._id %>" method="POST" id="add-form" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="name" class="form-label">Name:</label>
                    <input type="text" id="name" name="name" class="form-input"value="<%= product.name%>" required>
                </div>
                <div class="form-group">
                    <label for="model" class="form-label">Model:</label>
                    <input type="text" id="model" name="model" value="<%= product.model%>" class="form-input" required>
                </div>
                <div class="form-group">
                    <label for="size" class="form-label">Size:</label>
                    <input type="text" id="size" name="size" value="<%= product.size%>" class="form-input" required>
                </div>
                <div class="form-group">
                    <label for="material" class="form-label">Materials:</label>
                    <input type="text" id="material" name="material" value="<%= product.material%>" class="form-input" required>
                </div>
                <div class="form-group">
                    <label for="image" class="form-label">Image:</label>
                    <input type="file" id="image" name="image" class="form-input">
                    <img src="/<%= product.image%>" alt="" width="200">
                </div>
                <input type="hidden" name="old_image" value="<%= product.name%>">
                <button type="submit" class="form-button" value="Update Product" class="btn btn-success btn-lg">Submit</button>
            </form>
        </div>
    </div>
</div>

<%- include('layout/footer')%>
