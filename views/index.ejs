<%- include('layout/header')%>

<div class="container">
    <div class="row my-4">
        <div class="col-lg-12">
            <% if(message){%> <div class="alert alert-dismissible fade show alert-<%= message.type%>" role="alert">
                <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label=""></button>
                <strong><%= message.message%></strong>
            </div>
            <%} %>
            <div class="table-responsive">
                <% if(product.length > 0){%>
                    <table class="table table-striped text-center my-3">
                        <thead>
                            <tr class="table-dark">
                                <th>ID</th>
                                <th>Name</th>
                                <th>Model</th>
                                <th>Material</th>
                                <th>Size</th>
                                <th>Image</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                           <% product.forEach((row, index) => {%>
                            <tr class="align-middle">
                                <td><%= index%></td>
                                <td><%= row.name%></td>
                                <td><%= row.model%></td>
                                <td><%= row.size%></td>
                                <td><%= row.material%></td>
                                <td><img src="<%= row.image %>" width="200" alt="img-thumbnail"></td>
                                <td>
                                    <a href="/edit/<%= row._id%>" class="text-success"><i class="fas fa-edit fa-lg mx-1"></i></a>
                                    <a href="/delete/<%= row._id%>" class="text-success"><i class="fas fa-trash fa-lg mx-1"></i></a>
                                </td>
                            </tr>
                           <%})%>
                        </tbody>
                    </table>
                <%} else {%>
                    <h1 class="text-center text-secondary mt-5">No product found in the database</h1>
                <% } %>
            </div>
        </div>
    </div>
</div>

<%- include('layout/footer')%>
